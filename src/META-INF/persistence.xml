<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="movieReview-PU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <mapping-file>META-INF/orm.xml</mapping-file>
        <class>al.unyt.edu.advjava.fall2019.project.model.ActionLog</class>
        <class>al.unyt.edu.advjava.fall2019.project.model.Action</class>
        <class>al.unyt.edu.advjava.fall2019.project.model.Director</class>
        <class>al.unyt.edu.advjava.fall2019.project.model.MovieGoer</class>
        <class>al.unyt.edu.advjava.fall2019.project.model.Movie</class>
        <class>al.unyt.edu.advjava.fall2019.project.model.MoviesDirectorsRelations</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/movie_review?characterEncoding=latin1"/>
            <property name="javax.persistence.jdbc.user" value="jUser"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>
